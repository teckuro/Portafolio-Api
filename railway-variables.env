# Railway Fast Deploy Variables
APP_NAME="Portfolio API"
APP_ENV=production
APP_DEBUG=false
APP_URL=https://your-railway-domain.railway.app

# Database (Railway auto-configures these)
DB_CONNECTION=pgsql
DB_HOST=${PGHOST}
DB_PORT=${PGPORT}
DB_DATABASE=${PGDATABASE}
DB_USERNAME=${PGUSER}
DB_PASSWORD=${PGPASSWORD}

# Cache and Session
CACHE_DRIVER=file
SESSION_DRIVER=file
QUEUE_CONNECTION=sync

# Files
FILESYSTEM_DISK=public

# Logging
LOG_CHANNEL=stack
LOG_LEVEL=error

# Mail (optional)
MAIL_MAILER=log
MAIL_FROM_ADDRESS="noreply@portfolio.com"
MAIL_FROM_NAME="${APP_NAME}"
